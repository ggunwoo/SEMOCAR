{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "files": true
  },
  "include": ["src/**/*"]
}
